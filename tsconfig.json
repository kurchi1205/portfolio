{
    "compilerOptions": {
      "strict": true,
      "target": "esnext",
      "importHelpers": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "isolatedModules": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "baseUrl": "./",
      "paths": {
        "~/*": ["./*"]
      }
    },
    "exclude": ["node_modules", "dist", "reactJsxParser"]
  }
